<UserControl x:Class="WPFUI.PartialViews.StatisticViewControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPFUI.PartialViews"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1000">
    <Grid>
        <DataGrid Margin="25" x:Name="GoodsStatisticDataGrid" AutoGenerateColumns="False"
                  VerticalScrollBarVisibility="Auto"
        >
            <DataGrid.Columns>
                <DataGridTextColumn Header="Назва" Width="*"    Binding="{Binding Path=Name}"  IsReadOnly="True"/>
                <DataGridTextColumn Header="Кількість" Width="*"    Binding="{Binding Path=Count}"  IsReadOnly="True"/>
                <DataGridTextColumn Header="Мінімальна кількість" Width="*"    Binding="{Binding Path=MinCount}"  IsReadOnly="True"/>
            </DataGrid.Columns>
        </DataGrid>

</Grid>
</UserControl>
